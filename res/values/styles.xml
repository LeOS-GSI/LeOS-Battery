<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="help_cat_pre_margin">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">6dp</item>
  </style>

  <style name="help_cat">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:paddingBottom">2dp</item>
    <item name="android:gravity">center_horizontal</item>
    <!--item name="android:background">?android:attr/colorActivatedHighlight</item-->
    <!--item name="android:background">#039be5</item-->
    <item name="android:background">@color/help_cat_bg</item>
    <item name="android:textColor">@color/help_cat_text</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="help_cat_post_margin">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">10dp</item>
  </style>

  <style name="help_pref">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">1dp</item>
    <item name="android:paddingBottom">1dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:background">@color/help_pref_bg</item>
    <item name="android:textColor">@color/help_pref_text</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="help_text">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">7dp</item>
    <item name="android:paddingBottom">7dp</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:textSize">14sp</item>
    <item name="android:lineSpacingMultiplier">1.1</item>
  </style>

  <style name="bi_help_theme" parent="Theme.AppCompat.DayNight">
    <item name="android:windowBackground">@color/windowBackground</item>
    <item name="android:colorAccent">@color/help_accent</item>
    <item name="colorAccent">@color/help_accent</item>
    <item name="colorPrimary">@color/status_bar</item>
    <item name="colorPrimaryDark">@color/status_bar</item>
    <item name="android:windowLightStatusBar">@bool/windowLightStatusBar</item>
    <item name="android:navigationBarColor">@color/windowBackground</item>
    <item name="android:windowLightNavigationBar">@bool/windowLightStatusBar</item>
  </style>

  <style name="bi_main_theme" parent="Theme.AppCompat.DayNight">
    <item name="android:windowBackground">@color/windowBackground</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:alertDialogTheme">@style/dialog_theme</item>
    <item name="colorPrimary">@color/status_bar</item>
    <item name="colorPrimaryDark">@color/status_bar</item>
    <item name="android:windowLightStatusBar">@bool/windowLightStatusBar</item>
    <item name="android:navigationBarColor">@color/windowBackground</item>
    <item name="android:windowLightNavigationBar">@bool/windowLightStatusBar</item>
    <item name="colorButtonNormal">@color/button_color</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="android:textColorSecondary">@color/primary_text</item>
  </style>

  <bool name="windowLightStatusBar">true</bool>

  <!-- shadow under app bar? -->
  <color name="status_bar">@color/windowBackground</color>

  <style name="dialog_theme" parent="@android:style/ThemeOverlay.Material.Dialog.Alert">
    <item name="android:textColorPrimary">@color/dialog_text</item>

    <!--
        Note that we need to set both with and without android: namespace.
        Checkboxes (and probably other things) use colorAccent (I guess because of AppCompat),
        while Okay/Cancel (and probably other things) use android:colorAccent.
    -->
    <item name="android:colorAccent">@color/dialog_accent</item>
    <item name="colorAccent">@color/dialog_accent</item>
  </style>

  <!--
      Note the lack of some kind of AppCompatPreferenceActivity means we can't use
      an AppCompat theme, so we need android: namespace for items.
  -->
  <style name="bi_settings_theme" parent="@android:style/Theme.Material">
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:isLightTheme">@bool/windowLightStatusBar</item>
    <item name="android:colorBackground">@color/windowBackground</item>
    <item name="android:windowBackground">@color/windowBackground</item>
    <item name="android:windowLightStatusBar">@bool/windowLightStatusBar</item>
    <item name="android:navigationBarColor">@color/windowBackground</item>
    <item name="android:windowLightNavigationBar">@bool/windowLightStatusBar</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="android:textColorSecondary">@color/secondary_text</item>
    <item name="android:colorButtonNormal">@color/button_color</item>
    <item name="android:listDivider">@color/windowBackground</item>
    <item name="android:dividerHeight">1dp</item>
  </style>

  <dimen name="compound_button_width">68dp</dimen>
  <style name="alarm_list_item_toggle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/compound_button_width</item>
    <item name="android:paddingLeft">8dp</item>
  </style>

  <style name="SelectableItem">
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>

  <color name="menu_icon_tint">#333</color>
  <color name="icon_tint">#484848</color>

  <color name="button_color">#ccc</color>

  <color name="dialog_accent">@color/dc_light_blue</color>
  <color name="dialog_text">#000</color>

  <color name="secondary_text">#666</color>
  <color name="primary_text">#111</color>

  <color name="accent">@color/dc_sat_light_blue</color>
  <color name="android_green">#A4C639</color>
  <color name="android_green_darker">#7cbc1d</color>
  <color name="ics_blue">#33b5E5</color>
  <color name="my_yellow">#E8D018</color>
  <color name="my_darker_yellow">#D0BF27</color>
  <color name="my_darker_darker_yellow">#d3c314</color>
  <color name="col2020">#3b7bda</color>

  <color name="windowBackground">#fafafa</color>
  <color name="widgetTextColor">#111</color>

  <color name="dc_pink">#9c94db</color>

  <color name="dc_blue">#248</color>
  <color name="dc_light_blue">#586fb8</color>
  <color name="dc_light2_blue">#5773c9</color>
  <color name="dc_lighter_blue">#8a9deb</color>
  <color name="dc_sat_light_blue">#3a5ab8</color>
  <!--color name="dc_bright_light_blue">#6d90fa</color-->
  <color name="dc_bright_light_blue">#79a3ff</color>
  <color name="dc_dark_blue">#001e5a</color>
  <color name="dc_blueviolet">#7f75cf</color>
  <color name="dc_light_blueviolet">#b1a4ff</color>
  <color name="dc_dark_blueviolet">#4e499d</color>

  <color name="help_cat_bg">@color/dc_blue</color>
  <color name="help_cat_text">#f0f0f0</color>
  <color name="help_pref_bg">@color/dc_light_blue</color>
  <color name="help_pref_text">#f8f8f8</color>
  <color name="help_accent">@color/dc_dark_blueviolet</color>

  <color name="time_til_charged">@color/my_yellow</color>
  <color name="light_usage">#cccc7e</color>
  <color name="normal_usage">@color/android_green</color>
  <color name="heavy_usage">@color/my_yellow</color>
  <color name="constant_usage">#DD961B</color>

  <color name="log_unplugged">@color/my_darker_darker_yellow</color>
  <color name="log_plugged">#70b2ca</color>
  <color name="log_charged">@color/android_green_darker</color>
  <color name="log_unknown">#cf3c3c</color>
  <color name="log_old_status">#666</color>
  <color name="log_boot_completed">#886bc7</color>

  <!--color name="heavy_usage">#DD901C</color-->

  <integer name="current_info_top_left_weight">4</integer>
  <integer name="current_info_top_right_weight">6</integer>

  <integer name="bif_padding_weight">1</integer>
  <dimen name="bis_side_padding">15dp</dimen>

  <dimen name="battery_padding">10dp</dimen>

  <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />
  <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />

  <style name="NotificationTextIcon" parent="NotificationTitle">
    <item name="android:textColor">@color/main_notification_default_custom_text_color</item>
  </style>

  <dimen name="main_notification_text_padding_left">10dp</dimen>

  <color name="notification_box_default_color">#222</color>
  <color name="main_notification_default_custom_text_color">#000</color>
  <bool name="default_show_box_around_icon_area">true</bool>

  <dimen name="widget_margin">0dp</dimen>

  <style name="divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.6dp</item>
    <item name="android:layout_marginLeft">7dp</item>
    <item name="android:layout_marginRight">7dp</item>
    <item name="android:background">?android:attr/listDivider</item>
  </style>

  <dimen name="tls_button_fs">16sp</dimen>
  <dimen name="tls_button_height">65dp</dimen>
</resources>
